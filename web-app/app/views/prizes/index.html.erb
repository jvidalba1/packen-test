<h1>Listing Prizes</h1>
<%= link_to 'New Prize', new_prize_path, class: "btn btn-default btn-md" %>
<table class="table">
  <thead>
    <tr>
      <th>#id</th>
      <th>Stock</th>
      <th>Name</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.id %></td>
        <td><%= prize.stock %></td>
        <td><%= prize.name %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Edit', edit_prize_path(prize), class: "btn btn-sm btn-default" %>
            <%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
